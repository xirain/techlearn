---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="404 - 页面未找到">
  <div class="container-custom py-24 text-center">
    <h1 class="text-8xl font-bold gradient-text mb-4">404</h1>
    <p class="text-xl text-muted-foreground mb-8">
      抱歉，你访问的页面不存在。
    </p>
    <a
      href={import.meta.env.BASE_URL}
      class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary text-primary-foreground font-medium hover:opacity-90 transition-opacity"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m12 19-7-7 7-7"></path>
        <path d="M19 12H5"></path>
      </svg>
      返回首页
    </a>
  </div>
</BaseLayout>
